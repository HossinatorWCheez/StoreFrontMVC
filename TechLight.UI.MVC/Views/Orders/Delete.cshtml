@model TechLight.DATA.EF.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1">
            Delete <span style="color: #feb900;">@Model.Username's</span> Order?
        </h2>
        <h3 class="alert alert-danger">Are you sure you want to delete this? This action CANNOT be undone</h3>
    </div>
</section>

<div class="row col-md-8 offset-4 text-justify">
    <p class="h5">
        <strong>@Html.DisplayNameFor(model => model.OrderDate):</strong> @Html.DisplayFor(model => model.OrderDate)
    </p>
    <p class="h5">
        <strong>@Html.DisplayNameFor(model => model.Username):</strong> @Html.DisplayFor(model => model.Username)
    </p>
    <p class="h5">
        <strong>@Html.DisplayNameFor(model => model.Customer):</strong> @Html.DisplayFor(model => model.Customer.CustomerId)
    </p>
</div>

<div class="text-center my-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Back to Orders</a>
    </form>
</div>