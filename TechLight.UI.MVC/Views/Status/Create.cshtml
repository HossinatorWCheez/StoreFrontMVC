@model TechLight.DATA.EF.Models.Status

@{
    ViewData["Title"] = "Create";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1" style="color: #feb900;">
            Create a <span>Status</span>
        </h2>
    </div>
</section>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatusName" class="control-label"></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusDesc" class="control-label"></label>
                <input asp-for="StatusDesc" class="form-control" />
                <span asp-validation-for="StatusDesc" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3 mb-3">
    <a asp-action="Index" class="btn btn-dark">Back to Status</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
