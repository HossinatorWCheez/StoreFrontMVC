@model IEnumerable<TechLight.DATA.EF.Models.ProductOrder>

@{
    ViewData["Title"] = "Product Orders";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <a asp-action="Details" asp-route-id="@item.ProductOrderId">@Html.DisplayFor(modelItem => item.Quantity)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductOrderId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
