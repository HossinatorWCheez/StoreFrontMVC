@model TechLight.DATA.EF.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1 text-center" style="color: #feb900;">
            <span>@ViewData["Title"]</span>
        </h2>
    </div>
</section>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountLvl" class="control-label"></label>
                <input asp-for="AccountLvl" class="form-control" />
                <span asp-validation-for="AccountLvl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountRegion" class="control-label"></label>
                <input asp-for="AccountRegion" class="form-control" />
                <span asp-validation-for="AccountRegion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountRep" class="control-label"></label>
                <input asp-for="AccountRep" class="form-control" />
                <span asp-validation-for="AccountRep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center my-3">
    <a asp-action="Index" class="btn btn-dark">Back to Customers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
