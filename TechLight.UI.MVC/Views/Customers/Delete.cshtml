@model TechLight.DATA.EF.Models.Customer

@{
    ViewData["Title"] = "Delete";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center col-md-8 offset-2">
    <div class="heading_container heading_center">
        <h2 class="fs-1">
            Delete <span style="color: #feb900;">@Model.Username</span>?
        </h2>
        <h3 class="alert alert-danger">Are you sure you want to delete this? This action CANNOT be undone!</h3>
    </div>
</section>

<div>
    <div>
        <div class="col-md-4 offset-4" id="product-details">
            <p class="h5">
                <strong>@Html.DisplayNameFor(model => model.Username):</strong> @Html.DisplayFor(model => model.Username)
            </p>
            <p class="h5">
                <strong>@Html.DisplayNameFor(model => model.AccountLvl):</strong> @Html.DisplayFor(model => model.AccountLvl)
            </p>
            <p class="h5">
                <strong>@Html.DisplayNameFor(model => model.AccountRegion):</strong> @Html.DisplayFor(model => model.AccountRegion)
            </p>
            <p class="h5">
                <strong>@Html.DisplayNameFor(model => model.AccountRep):</strong> @Html.DisplayFor(model => model.AccountRep)
            </p>
        </div>
    </div>
</div>
<div class="text-center my-3">
    <a asp-action="Delete" asp-route-id="@Model?.CustomerId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-dark">Back to Customers</a>
</div>
