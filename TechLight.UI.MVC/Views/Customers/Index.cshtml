@model IEnumerable<TechLight.DATA.EF.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1 text-center" style="color: #feb900;">
            <span>@ViewData["Title"]</span>
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <p align="center" class="btn btn-dark">
                <a style="color: white" asp-action="Create">Add Customer</a>
            </p>
        }
    </div>
</section>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountLvl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountRegion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountRep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <a asp-action="Details" asp-route-id="@item.CustomerId">@Html.DisplayFor(modelItem => item.Username)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountLvl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRep)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>
}