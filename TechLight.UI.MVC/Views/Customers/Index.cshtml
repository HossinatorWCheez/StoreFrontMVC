@model IEnumerable<TechLight.DATA.EF.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountLvl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountRegion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountRep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountLvl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRep)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
