@model IEnumerable<TechLight.DATA.EF.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1" style="color: #feb900;">
            <span>@ViewData["Title"]</span>
        </h2>
        <p align="center" class="btn btn-dark">
            <a style="color: white" asp-action="Create">Add Category</a>
        </p>
    </div>
</section>

<table class="table table-dark table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.CategoryId">@Html.DisplayFor(modelItem => item.CategoryName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDesc)
            </td>
            <td>
            @if (User.IsInRole("Admin"))
            {
                <span><a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |</span>
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
