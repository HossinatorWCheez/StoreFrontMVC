@model TechLight.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Delete " + Model.CategoryName;
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center col-md-8 offset-2">
    <div class="heading_container heading_center">
        <h2 class="fs-1">
            Delete <span style="color: #feb900;">@Model.CategoryName</span>?
        </h2>
        <h3 class="alert alert-danger">Are you sure you want to delete this? This action CANNOT be undone</h3>
    </div>
</section>

<div class="row col-md-8 offset-4 text-justify">
    <p class="h5">
        <strong>@Html.DisplayNameFor(mode => Model.CategoryName):</strong> @Html.DisplayFor(model => model.CategoryName)
    </p>
    <p class="h5">
        <strong>@Html.DisplayNameFor(mode => Model.CategoryDesc):</strong> @Html.DisplayFor(model => model.CategoryDesc)
    </p>
</div>

<form asp-action="Delete" class="text-center mt-3 mb-3">
    <input type="hidden" asp-for="CategoryId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a asp-action="Index" class="btn btn-dark">Back to Categories</a>
</form>
