@model TechLight.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Edit " + Model.CategoryName;
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1">
            Modify <span style="color: #feb900;">@Model.CategoryName</span>
        </h2>
    </div>
</section>

<div class="row mb-3">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDesc" class="control-label"></label>
                <input asp-for="CategoryDesc" class="form-control" />
                <span asp-validation-for="CategoryDesc" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mb-3 mt-3">
    <a asp-action="Index" class="btn btn-dark">Back to Categories</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
