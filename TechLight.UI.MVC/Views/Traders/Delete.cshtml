@model TechLight.DATA.EF.Models.Trader

@{
    ViewData["Title"] = "Delete " + Model.TraderName;
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-3 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1" style="color: #feb900;">
            Delete <span>@Model.TraderName</span>?
        </h2>
        <h3 class="alert alert-danger">Are you sure you want to delete this? This action CANNOT be undone!</h3>
    </div>
</section>

<div class="col-md-6 offset-5 align-content-center">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TraderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TraderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>

<form asp-action="Delete" class="text-center mb-3 mt-3">
    <input type="hidden" asp-for="TraderId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-dark">Back to Traders</a>
</form>

