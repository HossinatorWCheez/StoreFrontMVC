@model TechLight.DATA.EF.Models.RaidStatus

@{
    ViewData["Title"] = "Delete";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center col-md-8 offset-2">
    <div class="heading_container heading_center">
        <h2 class="fs-1" style="color: #feb900;">
            Delete <span>Found In Raid</span>?
        </h2>
        <h3 class="alert alert-danger">Are you sure you want to delete this? This action CANNOT be undone</h3>
    </div>
</section>

<div class="col-md-6 offset-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RaidStatusDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RaidStatusDesc)
        </dd>
    </dl>
</div>
<form asp-action="Delete" class="text-center mt-3 mb-3">
    <input type="hidden" asp-for="RaidStatusId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-dark">Back to Raid Status</a>
</form>

