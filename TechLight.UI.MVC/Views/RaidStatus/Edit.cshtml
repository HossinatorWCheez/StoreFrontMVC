@model TechLight.DATA.EF.Models.RaidStatus

@{
    ViewData["Title"] = "Edit";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2 class="fs-1" style="color: #feb900;">
            <span>Edit Raid Status</span>
        </h2>
    </div>
</section>

<div class="row">
    <div class="col-md-8 offset-2">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RaidStatusId" />
            <div class="form-group">
                <label asp-for="RaidStatusDesc" class="control-label"></label>
                <input asp-for="RaidStatusDesc" class="form-control" />
                <span asp-validation-for="RaidStatusDesc" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mb-3 mt-3">
    <a asp-action="Index" class="btn btn-dark">Back to Raid Status</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
